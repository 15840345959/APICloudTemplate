
/*选择地区*/

.express-area {
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    background-color: #fff;
}

.express-area a {
    display: block;
}

.express-area dl {
    position: relative;
    color: #4d525d;
}

.express-area dl dt {
    position: absolute;
    top: 0;
    left: 0;
}

.express-area dl dd {
    text-align: justify;
}

